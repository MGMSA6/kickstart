<idea-plugin>
    <!-- Unique and permanent plugin ID -->
    <id>com.kickstart.plugin</id>

    <!-- Plugin display name -->
    <name>Kickstart</name>

    <!-- Vendor / Author -->
    <vendor email="anand004.af@gmail.com"
        url="https://github.com/MGMSA6/kickstart" />

    <!-- Plugin description -->
    <description><![CDATA[
        <p>
            <b>Kickstart</b> is an Android Studio plugin that helps developers
            instantly bootstrap Android projects with clean architecture
            (MVVM / MVP / MVI), core base classes, and essential dependencies.
        </p>

        <p>
            It eliminates repetitive setup so developers can focus on
            building features instead of configuration.
        </p>
    ]]></description>

    <!-- Android Studio compatibility -->
    <idea-version since-build="241" />

    <!-- ðŸ”´ REQUIRED for Android Studio -->
    <depends>org.jetbrains.android</depends>
    <depends>com.intellij.java</depends>

    <!-- Actions -->
    <actions>
        <action
            id="com.kickstart.plugin.KickstartAction"
            class="com.kickstart.plugin.KickstartAction"
            text="Kickstart"
            description="Generates project files.">

            <!-- âœ… Correct menu location -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
